{% extends 'base.html.twig' %}

{% block title %}Role index{% endblock %}

{% block body %}
    <h1>Role index</h1>
<div class="d-flex justify-content-between align-items-center">
    <a class="btn btn-primary mr-2" href="{{ path('app_roler_new') }}"><i class="fa fa-plus mr-1" aria-hidden="true"></i>Add User</a>
    
    <form method="post" action="{{ path('role_pdf') }}" class="mr-2">
        <button type="submit" class="btn btn-primary"><i class="fa fa-file-pdf-o mr-1" aria-hidden="true"></i> PDF</button>
    </form>
    <form method="Get" action="{{ path('app_role_search') }}" class="form-inline my-2 my-lg-0 mr-2">
        <div class="form-group">
            <input type="text" name="query" class="form-control mr-sm-2" placeholder="Search for users...">
        </div>
        <button type="submit" class="btn btn-primary my-2 my-sm-0">Search</button>

    </form>
   <!--<form>
        <a class="btn btn-warning" href="{{ path('role_logout') }}">Logout</a>
    </form> -->
</div>

<br>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for role in roles %}
            <tr>
                <td>{{ role.id }}</td>
                <td>{{ role.nom }}</td>
                <td>
                    <a href="{{ path('app_role_show', {'id': role.id}) }}">show</a>
                    <a href="{{ path('app_role_edit', {'id': role.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_role_new') }}">Create new</a>
{% endblock %}
